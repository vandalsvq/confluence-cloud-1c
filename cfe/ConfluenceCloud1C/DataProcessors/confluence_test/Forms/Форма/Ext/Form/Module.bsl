Процедура confluence_ApiClientServer_get_cql_operator_text(Форма)
	ИмяТеста = "confluence_ApiClientServer.get_cql_operator_text";
	
	Соответствие = Новый Соответствие;
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.Больше, ">%1"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.Меньше, "<%1"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.БольшеИлиРавно, ">=%1"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.МеньшеИлиРавно, "<=%1"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.ВСписке, " in (%1)"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.НеВСписке, " not in (%1)"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.НачинаетсяС, "=%1*"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.НеНачинаетсяС, "!=%1*"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.Равно, "=%1"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.НеРавно, "!=%1"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.Содержит, "~%1"); 
	Соответствие.Вставить(ВидСравненияКомпоновкиДанных.НеСодержит, "!~%1"); 
	
	Для Каждого Условие Из ВидСравненияКомпоновкиДанных Цикл
		Если Соответствие.Получить(Условие) <> Неопределено Тогда
			Продолжить;
		КонецЕсли;
		
		Соответствие.Вставить(Условие, "");
	КонецЦикла;
	
	ТекстОшибки = "";
	Для Каждого КлючИЗначение Из Соответствие Цикл
		Результат = confluence_ApiClientServer.get_cql_operator_text(КлючИЗначение.Ключ);
		
		Если НЕ ТипЗнч(Результат) = Тип("Строка") Тогда
			ТекстОшибки = СтрШаблон("Возвращаемый тип не строка (%1)", Строка(КлючИЗначение.Ключ));
		Иначе
			РезультатСравнения = ЗначенияРавны(Результат, КлючИЗначение.Значение);
			Если НЕ ПустаяСтрока(РезультатСравнения) Тогда
				ТекстОшибки = СтрШаблон("%1 (%2)", РезультатСравнения, Строка(КлючИЗначение.Ключ));
			КонецЕсли;
		КонецЕсли;
		
		Если НЕ ПустаяСтрока(ТекстОшибки) Тогда
			Прервать;
		КонецЕсли;
	КонецЦикла;
	
	ЗафиксироватьРезультат(Форма, ИмяТеста, ТекстОшибки);
КонецПроцедуры

